{% extends "base.html.twig" %}

{% block body %}

    <header class="jumbotron jumbotron-fluid bg-info text-white mb-0 border-bottom border-white">
        <section class="container d-flex justify-content-center">
            <h1 class="mx-4 animate__animated animate__bounce">National Bank of Nowhereland</h1>
        </section>
    </header>

    <nav class="navbar navbar-expand-lg bg-info">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mt-0 bg-info py-1">
                <li class="nav-item">
                    <a class="nav-link text-white" href="{{ path("bank") }}">Accueil</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path("virement") }}">Virements</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path("new_account") }}">Souscrire</a>
                    </li>
                {% endif %}        
                <li class="nav-item">
                    <a class="nav-link text-white" href="{{ path("statistics") }}">Statistiques</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="{{ path("blog") }}">Blog</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path("update_profil") }}">Mon profil</a>
                    </li>
                {% endif %}        
            </ul>
        </div>

        <aside class="text-white">
            {% if app.user %}
                {{ app.user.civility }} {{ app.user.lastname }} {{ app.user.firstname }} <a class='btn btn-secondary mx-1' href="{{ path("app_logout") }}">Déconnexion</a>
            {% else %}
                <a class='btn btn-secondary mx-1' href="{{ path("app_login") }}">Connexion</a>
            {% endif %}        
        </aside>
    </nav>

    <main class="container my-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block main %}{% endblock %}
    </main>

    <footer class="jumbotron jumbotron-fluid bg-info text-white my-0">
        <section class="container">
            <p class="lead my-0">National Bank of Nowhereland</p>
            <p class="my-0">Tous droits réservés</p>
        </section>
    </footer>

{% endblock %}




